<?xml version="1.0" encoding="utf-8"?>
<!--
    Màn hình thêm / chỉnh sửa công việc
    Các trường:
     - Tên công việc
     - Mô tả
     - Ngày hoàn thành
     - Nút lưu
-->

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF"
    tools:context=".features.task_manager.screens.TaskDetailActivity">

    <!-- TITLE -->
    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chi tiết công việc"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- INPUT – Tên công việc -->
    <EditText
        android:id="@+id/edt_task_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Tên công việc"
        android:padding="12dp"
        android:background="@android:drawable/editbox_background_normal"
        app:layout_constraintTop_toBottomOf="@id/tv_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- INPUT – Mô tả -->
    <EditText
        android:id="@+id/edt_task_description"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="12dp"
        android:padding="12dp"
        android:gravity="top|start"
        android:background="@android:drawable/editbox_background_normal"
        android:hint="Mô tả công việc"
        app:layout_constraintTop_toBottomOf="@id/edt_task_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- INPUT – Ngày -->
    <EditText
        android:id="@+id/edt_task_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="Ngày hoàn thành"
        android:padding="12dp"
        android:focusable="false"
        android:background="@android:drawable/editbox_background_normal"
        app:layout_constraintTop_toBottomOf="@id/edt_task_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- BUTTON SAVE -->
    <Button
        android:id="@+id/btn_save_task"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Lưu công việc"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/edt_task_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
