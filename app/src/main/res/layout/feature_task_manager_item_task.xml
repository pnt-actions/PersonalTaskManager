<?xml version="1.0" encoding="utf-8"?>
<!--
    Item hiển thị 1 Task trong RecyclerView của Task Manager.
    Gồm:
     - Tiêu đề task
     - Mô tả task
    Dùng MaterialCardView cho UI đẹp và hiện đại.
-->

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="16dp"
    app:strokeWidth="1dp"
    app:strokeColor="#22000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Tiêu đề công việc -->
        <TextView
            android:id="@+id/item_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiêu đề công việc"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- Mô tả công việc -->
        <TextView
            android:id="@+id/item_task_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Mô tả công việc"
            android:textSize="14sp"
            android:textColor="#66000000" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
