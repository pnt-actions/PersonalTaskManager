<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white">

        <!-- Min Streak -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Streak tối thiểu:"
            android:textSize="14sp"
            android:textColor="@color/textPrimary"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edt_min_streak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ví dụ: 5"
            android:inputType="number"
            android:textColor="@color/textPrimary"
            android:textColorHint="@color/textSecondary"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background_normal"
            android:layout_marginBottom="12dp" />

        <!-- Max Streak -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Streak tối đa:"
            android:textSize="14sp"
            android:textColor="@color/textPrimary"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edt_max_streak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ví dụ: 30"
            android:inputType="number"
            android:textColor="@color/textPrimary"
            android:textColorHint="@color/textSecondary"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background_normal"
            android:layout_marginBottom="12dp" />

        <!-- Start Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Từ ngày:"
            android:textSize="14sp"
            android:textColor="@color/textPrimary"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edt_filter_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Chọn ngày bắt đầu"
            android:textColor="@color/textPrimary"
            android:textColorHint="@color/textSecondary"
            android:focusable="false"
            android:clickable="true"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background_normal"
            android:layout_marginBottom="12dp" />

        <!-- End Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đến ngày:"
            android:textSize="14sp"
            android:textColor="@color/textPrimary"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edt_filter_end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Chọn ngày kết thúc"
            android:textColor="@color/textPrimary"
            android:textColorHint="@color/textSecondary"
            android:focusable="false"
            android:clickable="true"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background_normal"
            android:layout_marginBottom="12dp" />

        <!-- Clear Button -->
        <Button
            android:id="@+id/btn_clear_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xóa bộ lọc"
            android:textColor="@color/textPrimary"
            android:backgroundTint="@android:color/transparent" />

    </LinearLayout>
</ScrollView>

